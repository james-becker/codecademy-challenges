var text = "My name is James James James."
var myName = "James"
var hits = []

for (var i = 0; i < text.length; i ++) {
 if (text[i] === "J") {
     for (var j = i; j < (i + myName.length); j ++) {
         hits.push(text[j])
     }
 }
}

if (hits.length > 0) {
    console.log(hits)
} else {
    console.log("Your name wasn't found!")
}
